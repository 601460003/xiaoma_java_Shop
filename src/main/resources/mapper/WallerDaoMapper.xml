<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiaoma.mall.dao.WalletDao">
    <insert id="addWallet" >
        insert into wallet(create_time,status,create_user,money)
        values (#{createTime},#{status},#{createUser},#{money})
    </insert>
    <select id="getMemberByMobile" resultType="com.alibaba.fastjson.JSONObject">
        select
        m.id,
        m.name,
        m.mobile,
        w.money
        from member m
        left join wallet w on m.id = w.member_id
        where mobile = #{mobile}
    </select>
</mapper>